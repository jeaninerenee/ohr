<p id="notice"><%= notice %></p>

<h1>Days</h1>

<table>
  <thead>
    <tr>
      <th>Auth account</th>
      <th>Day number</th>
      <th>Day short name</th>
      <th>Day long name</th>
      <th>Status</th>
      <th>Updated by</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.auth_account_id %></td>
        <td><%= day.day_number %></td>
        <td><%= day.day_short_name %></td>
        <td><%= day.day_long_name %></td>
        <td><%= day.status_id %></td>
        <td><%= day.updated_by %></td>
        <td><%= day.created_by %></td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

