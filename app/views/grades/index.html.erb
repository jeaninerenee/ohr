<p id="notice"><%= notice %></p>

<h1>Grades</h1>

<table>
  <thead>
    <tr>
      <th>Auth account</th>
      <th>Grade number</th>
      <th>Grade name</th>
      <th>Grade order</th>
      <th>Status</th>
      <th>Updated by</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.auth_account_id %></td>
        <td><%= grade.grade_number %></td>
        <td><%= grade.grade_name %></td>
        <td><%= grade.grade_order %></td>
        <td><%= grade.status_id %></td>
        <td><%= grade.updated_by %></td>
        <td><%= grade.created_by %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

