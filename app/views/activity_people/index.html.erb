<p id="notice"><%= notice %></p>

<h1>Activity People</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Person</th>
      <th>Teacher ind</th>
      <th>Person note</th>
      <th>Person order</th>
      <th>Status</th>
      <th>Updated by</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_people.each do |activity_person| %>
      <tr>
        <td><%= activity_person.activity_id %></td>
        <td><%= activity_person.person_id %></td>
        <td><%= activity_person.teacher_ind %></td>
        <td><%= activity_person.person_note %></td>
        <td><%= activity_person.person_order %></td>
        <td><%= activity_person.status_id %></td>
        <td><%= activity_person.updated_by %></td>
        <td><%= activity_person.created_by %></td>
        <td><%= link_to 'Show', activity_person %></td>
        <td><%= link_to 'Edit', edit_activity_person_path(activity_person) %></td>
        <td><%= link_to 'Destroy', activity_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

