<h1>School Years</h1>

<%=form_tag destroy_multiple_years_path, method: :delete do %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Auth account</th>
        <th>Year start</th>
        <th>Year end</th>
        <th>Year short name</th>
        <th>Year long name</th>
        <th>Default ind</th>
        <th>Status</th>
        <th>Updated by</th>
        <th>Created by</th>
        <th></th>
        <th><input type="checkbox" id="selectAll">All Items</input></th>
      </tr>
    </thead>

    <tbody>
      <% @years.each do |year| %>
        <tr>
          <td><%= year.auth_account_id %></td>
          <td><%= year.year_start %></td>
          <td><%= year.year_end %></td>
          <td><%= year.year_short_name %></td>
          <td><%= link_to year.year_long_name, year %></td>
          <td><%= year.default_ind %></td>
          <td><%= year.status_id %></td>
          <td><%= year.updated_by %></td>
          <td><%= year.created_by %></td>
          <td></td>
          <td><input type="checkbox" class="selectable">Item 1</input></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag "Delete selected", :class => 'btn btn-primary btn-xs' %>
<% end %>

<script type="text/javascript">
    $("#selectAll").select_all();
</script>

<br>
<%= link_to 'Add New School Year', new_year_path, class:"btn btn-secondary" %>

