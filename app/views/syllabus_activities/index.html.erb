<p id="notice"><%= notice %></p>

<h1>Syllabus Activities</h1>

<table>
  <thead>
    <tr>
      <th>Syllabus</th>
      <th>Activity</th>
      <th>Activity note</th>
      <th>Activity order</th>
      <th>Status</th>
      <th>Updated by</th>
      <th>Created by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @syllabus_activities.each do |syllabus_activity| %>
      <tr>
        <td><%= syllabus_activity.syllabus_id %></td>
        <td><%= syllabus_activity.activity_id %></td>
        <td><%= syllabus_activity.activity_note %></td>
        <td><%= syllabus_activity.activity_order %></td>
        <td><%= syllabus_activity.status_id %></td>
        <td><%= syllabus_activity.updated_by %></td>
        <td><%= syllabus_activity.created_by %></td>
        <td><%= link_to 'Show', syllabus_activity %></td>
        <td><%= link_to 'Edit', edit_syllabus_activity_path(syllabus_activity) %></td>
        <td><%= link_to 'Destroy', syllabus_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

